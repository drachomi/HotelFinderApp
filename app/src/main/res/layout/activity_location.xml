<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.richard.abigayle.hotelfinder.Activities.permissions.Location">

    <TextView
        android:typeface="sans"
        android:textStyle="bold"
        android:layout_marginTop="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:layout_gravity="center"
        android:text="Location Access"/>
    <ImageView
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/marker_purple"
        android:layout_width="250dp"
        android:layout_height="120dp" />
    <TextView
        android:layout_marginBottom="40dp"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:typeface="sans"
        android:text="We need to know your location for the best search experience"/>



    <Button
        android:onClick="onClick"
        android:typeface="sans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Enable"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"/>

    <Button
        android:typeface="sans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Not Now"
        android:textColor="@color/colorPrimary"
        android:background="#ffffff"/>


</LinearLayout>
