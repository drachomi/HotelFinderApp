<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.richard.abigayle.hotelfinder.Activities.permissions.Location">

    <TextView
        android:typeface="sans"
        android:textStyle="bold"
        android:layout_marginTop="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:layout_gravity="center"
        android:text="ACCESS YOUR LOCATION"/>
    <ImageView
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/marker_purple"
        android:layout_width="306dp"
        android:layout_height="210dp" />
    <TextView
        android:layout_marginBottom="40dp"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:typeface="sans"
        android:text="We use your location to find hotels closer to you, Please kindly enable it when prompted"/>



    <Button
        android:onClick="onClick"
        android:typeface="sans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Enable Location"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"/>

    <Button
        android:typeface="sans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Do not Allow"
        android:textColor="#636262"
        android:background="#ffffff"/>


</LinearLayout>
